{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true
  },
  "extends": "@tsconfig/react-native/tsconfig.json",
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "App.tsx"],
  "exclude": ["__tests__/**/*-test.ts"]
}
